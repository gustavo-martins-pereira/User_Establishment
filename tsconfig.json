{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@aws/*": ["aws/*"],
            "@configs/*": ["configs/*"],
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@repositories/*": ["repositories/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
        },
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}